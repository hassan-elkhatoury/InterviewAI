<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.interviewai.controller.LoginController"
           stylesheets="@../css/main.css" styleClass="dark-root">
    <BorderPane>
        <top>
            <HBox alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="16" right="24" bottom="0" left="24" />
                </padding>
                <Pane HBox.hgrow="ALWAYS" />
                <Button text="S'inscrire" onAction="#onOpenCreateAccount" styleClass="btn-outline-light" />
            </HBox>
        </top>
        <center>
            <VBox alignment="CENTER" spacing="18">
                <VBox alignment="CENTER" spacing="18" styleClass="auth-dark" maxWidth="520">
                    <Label text="Connexion" styleClass="title-dark" />

                    <!-- Email/Username Field -->
                    <VBox spacing="8">
                        <TextField fx:id="usernameField" promptText="E-mail ou nom d'utilisateur" styleClass="input-dark" />
                    </VBox>

                    <!-- Password with Forgot link -->
                    <VBox spacing="8">
                        <HBox alignment="CENTER_RIGHT" spacing="8">
                            <Pane HBox.hgrow="ALWAYS" />
                            <Button text="Oublié ?" onAction="#onForgotPassword" styleClass="button-link" />
                        </HBox>
                        <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="input-dark" />
                    </VBox>

                    <!-- Primary button -->
                    <Button fx:id="loginButton" text="SE CONNECTER" onAction="#onLogin" defaultButton="true" styleClass="btn-primary-blue" maxWidth="Infinity" />

                    <!-- Divider -->
                    <HBox alignment="CENTER" spacing="10">
                        <Region HBox.hgrow="ALWAYS" prefHeight="1" style="-fx-background-color:#233041;" />
                        <Label text="OU" styleClass="divider-label" />
                        <Region HBox.hgrow="ALWAYS" prefHeight="1" style="-fx-background-color:#233041;" />
                    </HBox>

                    <!-- Social buttons -->
                    <HBox spacing="16" alignment="CENTER">
                        <Button text="GOOGLE" styleClass="btn-social" />
                        <Button text="FACEBOOK" styleClass="btn-social" />
                    </HBox>

                    <!-- Footer text -->
                    <Label text="En te connectant à InterviewAI, tu acceptes nos Conditions d'utilisation et notre Politique de confidentialité." wrapText="true" styleClass="footer-text" />
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
